<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_screen_gradient"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textColor="@color/scifi_cyan"
            android:textStyle="bold"
            android:layout_marginBottom="48dp"
            android:letterSpacing="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_scifi"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/homeWirelessImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_wireless_disabled"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/homeWifiStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_not_connected"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <TextView
                 android:id="@+id/homeWifiSSID"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="-"
                 android:textColor="@color/scifi_cyan"
                 android:textSize="18sp"
                 android:textStyle="bold"
                 android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/homeBtnStartStop"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/blue_btn_selector"
                android:text="@string/home_start"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>

        </LinearLayout>

        <TextView
            android:id="@+id/homeServerInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#11FFFFFF"
            android:padding="16dp"
            android:fontFamily="monospace"
            android:textColor="@color/scifi_accent"
            android:textSize="14sp"
            android:text="@string/server_log_ready"
            android:gravity="center"
            android:visibility="invisible"/>
        
    </LinearLayout>
</ScrollView>
